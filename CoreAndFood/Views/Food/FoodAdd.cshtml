@model CoreAndFood.Data.Models.FoodAdd

@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Add</h1>

<br />

<form class="form-gruop" action="FoodAdd" asp-controller="Food" method="post" enctype="multipart/form-data"> 
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Price)
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock)
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Category)
    @Html.DropDownListFor(x => x.CategoryID, ((List<SelectListItem>)ViewBag.categories), new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ImageURL)
    @* @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" }) *@
    <input type="file" name="ImageURL" />
    <br />
    <button class="btn btn-success btn-block">Add</button>
</form>
